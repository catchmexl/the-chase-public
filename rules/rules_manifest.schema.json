{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/catchmexl/the-chase-public/main/rules/rules_manifest.schema.json",
  "title": "Rules Manifest",
  "description": "Schema for The Chase game rules manifest file",
  "type": "object",
  "required": ["version", "lastUpdated", "rules"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the rules (e.g., '1.0.0')",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO 8601 date of last update (e.g., '2025-10-29T12:00:00Z')",
      "format": "date-time"
    },
    "rules": {
      "type": "array",
      "description": "List of rule sections",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/ruleSection"
      }
    }
  },
  "definitions": {
    "ruleSection": {
      "type": "object",
      "required": ["id", "title", "file", "category", "order"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the rule section (kebab-case)",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "examples": ["objective", "gameplay", "trigger-zones"]
        },
        "title": {
          "type": "string",
          "description": "Display title for the rule section",
          "minLength": 1,
          "maxLength": 100,
          "examples": ["Objective", "Game Play", "Trigger Zones"]
        },
        "file": {
          "type": "string",
          "description": "Markdown filename relative to rules directory",
          "pattern": "^[a-z0-9-]+\\.md$",
          "examples": ["objective.md", "gameplay.md", "trigger-zones.md"]
        },
        "category": {
          "type": "string",
          "description": "Category for grouping rules",
          "enum": ["core", "mechanics", "tips", "conduct"],
          "examples": ["core", "mechanics", "tips", "conduct"]
        },
        "order": {
          "type": "integer",
          "description": "Display order (lower numbers appear first)",
          "minimum": 1,
          "examples": [1, 2, 3]
        },
        "description": {
          "type": "string",
          "description": "Optional short description of the rule section",
          "maxLength": 200
        },
        "deprecated": {
          "type": "boolean",
          "description": "Whether this rule section is deprecated",
          "default": false
        }
      }
    }
  }
}
